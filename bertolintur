    type:'Bate e volta',
    popular:88
  }
];
    const grid = document.getElementById('pacotes');
    const countEl = document.getElementById('count');
    const lastVagas = document.getElementById('last-vagas');

    function render(items){
      grid.innerHTML='';
      items.forEach(p=>{
        const div = document.createElement('article');
        div.className='card';
        div.innerHTML = `
          <img src="${p.img}" alt="${p.title}">
          <h3>${p.title}</h3>
          <div class="meta">Saída: <strong>${p.date}</strong> • ${p.type}</div>
          <div class="price">R$ ${p.price.toLocaleString('pt-BR')}</div>
          <div style="margin-top:8px;color:var(--muted);font-size:13px">${p.spots}</div>
          <div class="cta-row">
            <a class="btn" href="https://api.whatsapp.com/send?phone=5541984755463&text=Ol%C3%A1%2C+tenho+interesse+no+pacote+${encodeURIComponent(p.title)}%2C+saindo+de+Curitiba" target="_blank">Reservar</a>
            <button onclick="openDetalhes(${p.id})" style="padding:10px 12px;border-radius:8px;border:1px solid #e6eef2;background:#fff;cursor:pointer">Detalhes</button>
          </div>
        `;
        grid.appendChild(div);
      });
      countEl.textContent = items.length;
    }

    function openDetalhes(id){
      const p = pacotes.find(x=>x.id===id);
      document.getElementById('modalContent').innerHTML = `
        <h2>${p.title}</h2>
        <p><strong>Saída:</strong> ${p.date}</p>
        <p><strong>Preço a partir de:</strong> R$ ${p.price.toLocaleString('pt-BR')}</p>
        <p><strong>Inclui:</strong> Transporte ida e volta, guia acompanhante e seguro viagem (confira condições no ato da compra).</p>
        <p style="color:var(--muted)">Para reservar ou tirar dúvidas clique em Reservar.</p>
      `;
      document.getElementById('modalBack').style.display='flex';
      document.getElementById('modalBack').setAttribute('aria-hidden','false');
    }

    document.getElementById('closeModal').addEventListener('click',()=>{
      document.getElementById('modalBack').style.display='none';
      document.getElementById('modalBack').setAttribute('aria-hidden','true');
    });

    // filters
    const search = document.getElementById('search');
    const month = document.getElementById('month');
    const type = document.getElementById('type');
    const sort = document.getElementById('sort');
    const clear = document.getElementById('clear');

    function applyFilters(){
      let items = [...pacotes];
      const q = search.value.trim().toLowerCase();
      if(q) items = items.filter(p=>p.title.toLowerCase().includes(q));
      if(month.value) items = items.filter(p=>p.date.toLowerCase().includes(month.value.toLowerCase()));
      if(type.value) items = items.filter(p=>p.type===type.value);
      if(sort.value==='price') items.sort((a,b)=>a.price-b.price);
      if(sort.value==='date') items.sort((a,b)=>a.date.localeCompare(b.date));
      if(sort.value==='popular') items.sort((a,b)=>b.popular-a.popular);
      render(items);
    }

    search.addEventListener('input',applyFilters);
    month.addEventListener('change',applyFilters);
    type.addEventListener('change',applyFilters);
    sort.addEventListener('change',applyFilters);
    clear.addEventListener('click',()=>{search.value='';month.value='';type.value='';sort.value='date';applyFilters();});

    // populate last vagas
    function fillLast(){
      const list = pacotes.slice(0,3);
      lastVagas.innerHTML = list.map(p=>`<li>${p.title} — ${p.spots}</li>`).join('');
    }

    // initial render
    fillLast();
    render(pacotes);
function render(items){
  grid.innerHTML='';
  items.forEach(p=>{
    const div = document.createElement('article');
    div.className='card';
    div.innerHTML = `
      <img src="${p.img}" alt="${p.title}">
      <h3>${p.title}</h3>
      <div class="meta">Saída: <strong>${p.date}</strong> • ${p.type}</div>
      <div class="price">R$ ${p.price.toLocaleString('pt-BR')}</div>
      <div style="margin-top:8px;font-size:13px; color:${p.spots === 'Lotado' ? 'red' : 'var(--muted)'}; font-weight:${p.spots === 'Lotado' ? 'bold' : 'normal'}">
        ${p.spots}
      </div>
      <div class="cta-row">
        <a class="btn" href="https://api.whatsapp.com/send?phone=5541984755463&text=Ol%C3%A1%2C+tenho+interesse+no+pacote+${encodeURIComponent(p.title)}%2C+saindo+de+Curitiba" target="_blank">Reservar</a>
        <button onclick="openDetalhes(${p.id})" style="padding:10px 12px;border-radius:8px;border:1px solid #e6eef2;background:#fff;cursor:pointer">Detalhes</button>
      </div>
    `;
    grid.appendChild(div);
  });
  countEl.textContent = items.length;
}
  </script>
